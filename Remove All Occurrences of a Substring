public:
    string removeOccurrences(string s, string part) {
        while(s.length()!=0 && s.find(part)< s.length()){// loop ke andar tabhi jao jab condition trur ho 
            s.erase(s.find(part) , part.length());// agar string mil gai to remaining part ko erase kar do
        }
        return s;
    }
